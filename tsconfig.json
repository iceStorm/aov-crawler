{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        // "importHelpers": true,
        // "experimentalDecorators": true,
        // "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // "sourceMap": true,
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}